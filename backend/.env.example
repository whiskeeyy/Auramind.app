# ============================================================================
# AuraMind Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ============================================================================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://xxxxx.supabase.co

# CRITICAL: Use ANON key (or PUBLISHABLE key for new projects)
# DO NOT use service_role key here - it bypasses Row Level Security!
# The ANON key enables RLS enforcement at the database layer.
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Legacy variable name (deprecated, use SUPABASE_ANON_KEY instead)
# If SUPABASE_ANON_KEY is not set, this will be used as fallback
# SUPABASE_KEY=

# Supabase JWT Secret (CRITICAL - Keep this secret!)
# Get this from: https://app.supabase.com/project/_/settings/api
# Look for "JWT Secret" under "Project API keys"
# This is used by the backend to verify JWT tokens from clients
SUPABASE_JWT_SECRET=your-super-secret-jwt-secret

# Optional: Service Role Key (⚠️ ONLY for admin tasks, NEVER for user requests)
# This key bypasses ALL Row Level Security policies - use with extreme caution!
# Only needed for background jobs, migrations, or admin operations.
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Google Gemini API Key (for AI features)
GOOGLE_API_KEY=
